---
interface Props {
  perk: string
}

const { perk } = Astro.props
---

<li
  class="flex items-center font-heading mb-3 font-medium text-base text-gray-900"
>
  <svg
    class="mr-2.5"
    width="22"
    height="22"
    viewBox="0 0 22 22"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M4.58301 11.9167L8.24967 15.5834L17.4163 6.41669"
      stroke="#A1A1AA"
      stroke-width="1.5"
      stroke-linecap="round"
      stroke-linejoin="round"></path>
  </svg>
  <p>{perk}</p>
</li>
