<section class="relative pt-28 pb-20 bg-gradient-gray overflow-hidden">
  <img
    class="absolute top-1/2 transform -translate-y-1/2 left-0"
    src="/gradia-assets/elements/sign-up/radial.svg"
    alt="Decorative background blur image"
  />
  <div class="relative z-10 container mx-auto px-4">
    <div class="flex flex-wrap -m-6 justify-center">
      <div class="w-full md:w-1/2 p-6">
        <div class="md:max-w-xl">
          <h2
            class="mb-12 font-heading font-bold text-gray-900 text-6xl sm:text-7xl"
          >
            Let's Start Building
          </h2>
          <form
            name="contact"
            method="POST"
            data-netlify="true"
            data-netlify-recaptcha="true"
          >
            <div class="flex flex-wrap -m-2 mb-6">
              <div class="w-full md:w-1/2 p-2">
                <input
                  class="w-full px-5 py-3.5 text-gray-500 placeholder-gray-500 bg-white outline-none focus:ring-2 focus:ring-green-300 border border-gray-200 rounded-lg"
                  type="text"
                  placeholder="First name"
                  name="first-name"
                />
              </div>
              <div class="w-full md:w-1/2 p-2">
                <input
                  class="w-full px-5 py-3.5 text-gray-500 placeholder-gray-500 bg-white outline-none focus:ring-2 focus:ring-green-300 border border-gray-200 rounded-lg"
                  type="text"
                  placeholder="Last name"
                  name="last-name"
                />
              </div>
              <div class="w-full p-2">
                <input
                  class="w-full px-5 py-3.5 text-gray-500 placeholder-gray-500 bg-white outline-none focus:ring-2 focus:ring-green-300 border border-gray-200 rounded-lg"
                  type="text"
                  placeholder="Email address"
                  name="email"
                />
              </div>
              <div class="w-full p-2">
                <textarea
                  class="w-full px-5 py-3.5 text-gray-500 placeholder-gray-500 bg-white outline-none focus:ring-2 focus:ring-green-300 border border-gray-200 rounded-lg"
                  placeholder="Tell us about your project..."
                  name="message"
                  cols="30"
                  rows="10"></textarea>
              </div>
            </div>
            <div class="flex flex-wrap -m-1.5 mb-8">
              <div class="w-auto p-1.5" data-netlify-recaptcha="true"></div>
            </div>
            <div class="md:max-w-max">
              <button
                aria-label="Submit Contact Form"
                type="submit"
                class="w-full font-heading font-semibold text-xs text-gray-900 uppercase tracking-px overflow-hidden rounded-md hover:ring-2 hover:ring-green-300 hover:ring-opacity-50"
              >
                <div
                  class="relative p-5 px-9 bg-gradient-green overflow-hidden rounded-md"
                >
                  <p class="relative z-10">Contact Us</p>
                </div>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
